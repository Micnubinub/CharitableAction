<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue">


        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_selector"
            android:paddingBottom="16dp"
            android:paddingLeft="69dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Statistics"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/white_arrow" />
    </RelativeLayout>


    <bigshots.people_helping_people.graph.charts.ValueLineChart
        android:id="@+id/stats_line_graph"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:egCurveSmoothness="0.25"
        app:egIndicatorLineColor="#FE6DA8"
        app:egIndicatorTextColor="#FE6DA8"
        app:egIndicatorTextUnit="g"
        app:egLegendHeight="40dp"
        app:egShowLegendBeneathIndicator="true"
        app:egShowStandardValue="false"
        app:egUseCubic="true"
        app:egUseOverlapFill="true" />
</LinearLayout>