<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <bigshots.people_helping_people.scroll_iew_lib.ParallaxScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_button_selector"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingBottom="14dp"
                android:text="My stats"
                android:textColor="@color/dark_grey_text"
                android:textSize="22sp" />

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stat_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_button_selector"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:paddingBottom="14dp"

                        android:textColor="@color/dark_grey_text"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:padding="8dp"
                        android:text="Graph of points over time"
                        android:textColor="@color/dark_grey_text"
                        android:textSize="16sp" />

                    <bigshots.people_helping_people.graph.charts.BarChart
                        android:id="@+id/my_stats"
                        android:layout_width="match_parent"
                        android:layout_height="256dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        app:egBarMargin="10dp"
                        app:egBarWidth="22dp"
                        app:egEnableScroll="true"
                        app:egFixedBarWidth="true"
                        app:egLegendHeight="40sp"
                        app:egLegendTextSize="14sp"
                        app:egShowDecimal="true"
                        app:egShowValues="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_button_selector"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingBottom="14dp"
                android:text="Global stats"
                android:textColor="@color/dark_grey_text"
                android:textSize="22sp" />

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_button_selector"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:paddingBottom="14dp"
                        android:text="$1032 raised"
                        android:textColor="@color/dark_grey_text"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <!--"enableScroll -->
                        <bigshots.people_helping_people.graph.charts.BarChart
                            android:id="@+id/global_stats"
                            android:layout_width="match_parent"
                            android:layout_height="256dp"
                            android:layout_margin="10dp"
                            app:egBarMargin="10dp"
                            app:egBarWidth="22dp"
                            app:egEnableScroll="false"
                            app:egFixedBarWidth="true"
                            app:egLegendHeight="40sp"
                            app:egLegendTextSize="14sp"
                            app:egShowDecimal="true"
                            app:egShowValues="true" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="256dp"
                            android:background="#99000000"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Coming Soon"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </bigshots.people_helping_people.scroll_iew_lib.ParallaxScrollView>
</LinearLayout>